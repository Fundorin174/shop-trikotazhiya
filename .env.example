# ============================================
# Трикотажия  переменные окружения
# Скопируйте в .env и заполните реальными значениями:
#   cp .env.example .env
# ============================================

# -- PostgreSQL --
POSTGRES_USER=medusa
POSTGRES_PASSWORD=CHANGE_ME_strong_password_42
POSTGRES_DB=medusa_trikotazhiya

# -- Medusa Backend --
NODE_ENV=production

# Секреты (сгенерируйте: openssl rand -hex 32)
JWT_SECRET=CHANGE_ME_jwt_secret
COOKIE_SECRET=CHANGE_ME_cookie_secret

# CORS  домены через запятую
STORE_CORS=http://localhost:3001
ADMIN_CORS=http://localhost:3001,http://localhost:9000
AUTH_CORS=http://localhost:3001,http://localhost:9000

# Внутренний URL бэкенда (для Docker-сети)
MEDUSA_BACKEND_URL=http://backend:9000

# -- Next.js Frontend --
# Публичный URL API (виден браузеру)
NEXT_PUBLIC_MEDUSA_BACKEND_URL=http://localhost:9000
# URL сайта (для sitemap, OG-тегов)
NEXT_PUBLIC_SITE_URL=http://localhost:3001
# Hostname бэкенда (для next/image domains)
NEXT_PUBLIC_MEDUSA_BACKEND_HOST=localhost

# -- ЮKassa --
# Идентификатор магазина (из личного кабинета ЮKassa)
YUKASSA_SHOP_ID=
# Секретный ключ API
YUKASSA_SECRET_KEY=
# Секрет для проверки webhook-уведомлений
YUKASSA_WEBHOOK_SECRET=
# URL возврата после оплаты
YUKASSA_RETURN_URL=http://localhost:3001/checkout/success

# -- Администратор --
ADMIN_EMAIL=admin@trikotazhiya.ru
ADMIN_PASSWORD=CHANGE_ME_admin_password
